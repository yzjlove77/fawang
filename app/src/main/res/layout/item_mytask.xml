<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_task_layout"
    android:orientation="vertical"
    android:background="?selectableItemBackground"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/item_task_title"
            android:text="浙江杭州萧山发生一起故意杀人案 "
            android:textColor="@color/release_title"
            android:textSize="@dimen/textsize18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/bt_add_friend"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="添加好友"
            android:textSize="10sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/button_blue_bac"/>

    </LinearLayout>




    <TextView
        android:id="@+id/item_task_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/secendcolor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="浙江杭州萧山发生一起故意杀人案浙江杭州萧山发生一起故意杀人案浙江杭州萧山发生一起故意杀人案浙江杭州萧山发生一起故意杀人案"
android:maxLength="40"


        />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_task_time"
            android:text="发布时间：2017-8-15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/item_task_count"
            android:gravity="right"
            android:text="38人提供线索"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>





</LinearLayout>