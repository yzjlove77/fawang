<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_home_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/item_reward_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="浙江杭州萧山发生一起故意杀人案 "
        android:textColor="@color/release_title"
        android:textSize="@dimen/textsize18" />


    <TextView
        android:id="@+id/item_reward_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:maxLength="40"
        android:text="浙江杭州萧山发生一起故意杀人案浙江杭州萧山发生一起故意杀人案浙江杭州萧山发生一起故意杀人案浙江杭州萧山发生一起故意杀人案"
        android:textColor="@color/secendcolor"


        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_reward_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="发布时间：2017-8-15" />


        <TextView
            android:id="@+id/item_reward_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/home_select_shang"
            android:drawablePadding="6dp"
            android:gravity="right"
            android:text="38万元"
            android:textColor="#f00"
            android:textSize="@dimen/textsize16" />

    </LinearLayout>

</LinearLayout>