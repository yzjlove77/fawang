<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<include layout="@layout/titlebar_layout"/>

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:padding="12dp"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/login_idCard"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/login_user"
            android:textCursorDrawable="@drawable/course_bac"
            android:hint="身份证号"
            android:background="@null"
            android:drawablePadding="6dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/viewdip"
            android:background="@color/graycolore"/>


        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/login_password"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:drawableLeft="@drawable/login_password"
                android:hint="密码"
                android:inputType="textPassword"
                android:textCursorDrawable="@drawable/course_bac"
                android:background="@null"
                android:drawablePadding="6dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="@color/white"
                android:text="@string/login_message"
                android:visibility="gone"
                android:background="@drawable/button_blue_bac" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/viewdip"
            android:background="@color/graycolore"/>

        <CheckBox
            android:id="@+id/login_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="法官"
            android:theme="@style/CheckBoxStyle"
            android:layout_gravity="right"/>

        <Button
            android:id="@+id/login_btn"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:text="@string/login_name"
            android:textSize="18sp"
            android:background="@drawable/button_gray_bac"/>

        <TextView
            android:id="@+id/login_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"/>

        <LinearLayout

            android:layout_marginTop="80dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/viewdip"
                android:background="@color/graycolore"/>

            <TextView
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_other"
                />

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/viewdip"
                android:background="@color/graycolore"/>


        </LinearLayout>


        <LinearLayout

            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/login_wechart"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/login_qq"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/login_weibo"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>