<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.wx.french">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- 登录 -->
        <activity
            android:name=".activity.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|stateUnchanged">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 主页 -->
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />

        <!-- 关于我们 -->
        <activity
            android:name=".activity.AboutActivity"
            android:screenOrientation="portrait" />

        <!-- 发布申请 -->
        <activity
            android:name=".activity.ReleaseActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|stateUnchanged" />

        <!-- 设置 -->
        <activity
            android:name=".activity.SettingActivity"
            android:screenOrientation="portrait" />

        <!-- 意见反馈 -->
        <activity
            android:name=".activity.FeedbackActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|stateUnchanged" />

        <!-- 个人资料 -->
        <activity
            android:name=".activity.PersonalDataActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|stateUnchanged" />

        <!-- 搜索 -->
        <activity
            android:name=".activity.SearchActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|stateUnchanged" />

        <!-- 赏金猎人排行榜 -->
        <activity
            android:name=".activity.BountyHunterActivity"
            android:windowSoftInputMode="stateHidden|stateUnchanged" />

        <!-- 我的举报 -->
        <activity android:name=".activity.MyreportActivity" />

        <!-- 我的评价 -->
        <activity android:name=".activity.MyTheyActivity" />

        <!-- 我的任务 -->
        <activity android:name=".activity.MyTaskActivity" />
        <activity android:name=".activity.ClueActivity" />

        <!-- 我的赏金 -->
        <activity android:name=".activity.MyMoneyActivity" />
        <activity android:name=".activity.RegisterActivity" />
        <activity android:name=".activity.RewardDetailActivity" />
        <activity android:name=".activity.ReportActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".activity.ClueDetailActivity" />
        <activity android:name=".activity.AlbumActivity"></activity>

        <activity android:name=".activity.CarAvtivity"/>
    </application>

</manifest>